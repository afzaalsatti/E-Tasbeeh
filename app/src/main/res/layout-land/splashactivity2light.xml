<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:scaleType="centerCrop"
    android:weightSum="4">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="135dp"

        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_app_icon"
        android:contentDescription="TODO" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:paddingBottom="5dp"


        >

        <ImageView
            android:id="@+id/p1"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_row="0"
            android:layout_column="0"



            android:background="@drawable/splash_image_background"
            android:src="@drawable/l1"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/p2"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_row="0"
            android:layout_column="2"

            android:background="@drawable/splash_image_background"
            android:src="@drawable/l2"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/p3"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_row="1"

            android:background="@drawable/splash_image_background"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:src="@drawable/l3"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/p4"

            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            android:background="@drawable/splash_image_background"
            android:layout_marginBottom="10dp"
            android:src="@drawable/l4"
            android:contentDescription="TODO" />

        <ImageView
android:id="@+id/p6"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginRight="50dp"

            android:background="@drawable/splash_image_background"
            android:src="@drawable/fav_icon"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/p5"

            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_row="2"
            android:layout_column="2"

            android:background="@drawable/splash_image_background"
            android:src="@drawable/l6"
            android:contentDescription="TODO" />



    </GridLayout>

</LinearLayout>
    </ScrollView>
</LinearLayout>